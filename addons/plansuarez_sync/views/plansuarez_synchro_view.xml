<odoo>

    <record id="view_transfer_line_form" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.line.form</field>
        <field name="model">plansuarez.synchro.obj.line</field>
        <field name="arch" type="xml">
            <form string="Transfered IDs Details" create="false" edit="false">
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="obj_id"/>
                        <field name="local_id" readonly="1"/>
                        <field name="remote_id" readonly="1"/>
                        <field name="v_fecha" />
                        <field name="v_identidad" />
                        <field name="v_tienda"/>
                        <field name="v_cajafactura" />
                        <field name="statuscode" />
                        <field name="errordetail" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_transfer_line_tree" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.line.tree</field>
        <field name="model">plansuarez.synchro.obj.line</field>
        <field name="arch" type="xml">
            <tree string="Transfered IDs Details" create="false" edit="false">
                <field name="name"/>
                <field name="obj_id"/>
                <field name="local_id"/>
                <field name="remote_id"/>
                <field name="v_fecha" />
                <field name="v_identidad" />
                <field name="v_tienda"/>
                <field name="v_cajafactura" />
                <field name="statuscode" />
                <field name="errordetail" />
            </tree>
        </field>
    </record>

    <record id="ir_filters_transfer_line_form" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.line.search</field>
        <field name="model">plansuarez.synchro.obj.line</field>
        <field name="arch" type="xml">
            <search string="Transfered Ids Details">
                <field name="name"/>
                <field name="obj_id"/>
                <field name="statuscode" />
                <field name="errordetail" />
                <group string="Group By">
                    <filter string="Object" name="grp_obj" context="{'group_by':'obj_id'}"/>
                    <filter string="Date" name="grp_date" context="{'group_by':'name'}"/>
                    <filter string="Statuscode" name="grp_statuscode" context="{'group_by': 'statuscode'}" />
                    <filter string="Detail" name="gro_errordetail" context="{'group_by': 'errordetail'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="actions_transfer_line_form" model="ir.actions.act_window">
        <field name="name">Filters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro.obj.line</field>
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="view_transfer_line_tree"/>
        <field name="search_view_id" ref="ir_filters_transfer_line_form"/>
    </record>

    <record id="action_base_synchro_obj_line_tree" model="ir.actions.act_window">
        <field name="name">Synchronized instances</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro.obj.line</field>
        <field name="binding_view_types">form</field>
    </record>

    <record id="base_synchro_obj_form" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.form</field>
        <field name="model">plansuarez.synchro.obj</field>
        <field name="arch" type="xml">
            <form string="Transfer Details" class="o_base_synchro_obj">
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="server_id"/>
                        <field name="action"/>
                        </group>
                        <!--field name="domain" colspan="4"/>
                        <field name="synchronize_date"/>
                        <field name="synchronize_end" /-->
                    </group>
                    <separator string="Data Sync."/>
                    <field name="line_id">
                        <tree string="Fields" editable="bottom">
                            <field name="local_id"/>
                            <field name="remote_id"/>
                            <field name="v_fecha" />
                            <field name="v_identidad" />
                            <field name="v_tienda"/>
                            <field name="v_cajafactura" />
                            <field name="statuscode" />
                            <field name="errordetail" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="plansuarez_synchro_obj_tree" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.tree</field>
        <field name="model">plansuarez.synchro.obj</field>
        <field name="arch" type="xml">
            <tree string="Synchronized Objects" class="o_base_synchro_obj">
                <!--field name="sequence"/-->
                <field name="name"/>
                <field name="server_id"/>
                <field name="action"/>
                <field name="synchronize_date"/>
            </tree>
        </field>
    </record>

    <record id="ir_filters_regclass_tree" model="ir.ui.view">
        <field name="name">plansuarez.synchro.obj.line.form</field>
        <field name="model">plansuarez.synchro.obj</field>
        <field name="arch" type="xml">
            <search string="Synchronized objects">
                <field name="synchronize_date"/>
                <group string="Group By">
                  <filter string="Latest synchronization" name="grp_sync_date"
                          context="{'group_by':'synchronize_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="actions_regclass_tree" model="ir.actions.act_window">
        <field name="name">Filters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro.obj</field>
        <field name="view_id" ref="plansuarez_synchro_obj_tree"/>
        <field name="search_view_id" ref="ir_filters_regclass_tree"/>
    </record>

    <record id="action_transfer_tree" model="ir.actions.act_window">
        <field name="name">Synchronized objects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro.obj</field>
        <field name="binding_view_types">form</field>
    </record>

    <record id="view_base_synchro_server_tree" model="ir.ui.view">
        <field name="name">plansuarez.synchro.server.tree</field>
        <field name="model">plansuarez.synchro.server</field>
        <field name="arch" type="xml">
            <tree string="Synchronized Server" class="o_base_synchro_server">
                <field name="name"/>
                <field name="server_url"/>
                <field name="server_port"/>
                <field name="server_db"/>
                <field name="connection_type" />
            </tree>
        </field>
    </record>

    <record id="view_base_synchro_server_form" model="ir.ui.view">
        <field name="name">plansuarez.synchro.server.form</field>
        <field name="model">plansuarez.synchro.server</field>
        <field name="arch" type="xml">
            <form string="Synchronized server" class="o_base_synchro_server">
                <sheet>
                    <group colspan="4" col="2">
                        <group>
                            <field name="name"/>
                            <field name="server_db"/>
                            <field name="server_url"/>
                            <field name="server_port"/>                          
                        </group>
                        <group>
                            <field name="login"/>
                            <field name="password" password="True"/>
                            <field name="connection_type" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_plansuarez_synchro_server_tree" model="ir.actions.act_window">
        <field name="name">Servers to be synchronized</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro.server</field>
        <field name="binding_view_types">form</field>
    </record>

    <menuitem id="plansuarez_sync" name="Synchronization" />

    <menuitem id="plansuarez_sync_history" name="History"
              groups="base.group_no_one" parent="plansuarez_sync"/>
    <menuitem action="action_base_synchro_obj_line_tree"
              id="menu_action_base_synchro_obj_line_tree"
              parent="plansuarez_sync_history"/>
    <menuitem id="plansuarez_server_tree_menu_id"
              action="action_plansuarez_synchro_server_tree"
              parent="plansuarez_sync"
              sequence="2"
    />
    <menuitem action="action_transfer_tree" id="transfer_menu_id"
            parent="plansuarez_sync"
            sequence="3"/>

</odoo>
