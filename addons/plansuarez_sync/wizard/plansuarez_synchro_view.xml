<odoo>

    <record id="view_plansuarez_synchro" model="ir.ui.view">
        <field name="name">Upgrade Synchronization</field>
        <field name="model">plansuarez.synchro</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Transfer Data To Server" class="o_upgrade_synchro">
                <group col="4">
                    <field name="server_url" required="1"/>
                    <field name="target_server" required="1"/>
                    <field name="action" required="1" />
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="upload_download_multi_thread" string="Synchronize"
                            type="object" class="oe_highlight o_button_base_synchronize"/>
                    or
                    <button string="Cancel" class="oe_link o_line_synchro_cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_plansuarez_synchro" model="ir.actions.act_window">
        <field name="name">Upgrade Synchronization</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">plansuarez.synchro</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_plansuarez_synchro"/>
        <field name="target">new</field>
    </record>

    <record id="view_plansuarez_synchro_finish" model="ir.ui.view">
        <field name="name">Upgrade Synchronization</field>
        <field name="model">plansuarez.synchro</field>
        <field name="arch" type="xml">
            <form string="Synchronization Completed!" class="o_base_synchro_success">
                <separator string="The synchronisation has been started. You will receive a request when it's done."/>
                <footer>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <menuitem parent="plansuarez_sync" name="Synchronize objects"
              action="action_view_plansuarez_synchro" id="menu_action_view_plansuarez_synchro"/>

</odoo>
