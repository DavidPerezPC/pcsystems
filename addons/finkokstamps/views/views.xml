<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="finkok_vats_list">
      <field name="name">Finkok Stamps Vats</field>
      <field name="model">finkokstamps.vats</field>
      <field name="arch" type="xml">
        <tree>
          <field name="vat"/>
          <field name="name" />
          <field name="partner_id"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="finkok_stamps_list">
      <field name="name">Finkok Stamps List</field>
      <field name="model">finkokstamps.stamps</field>
      <field name="arch" type="xml">
        <tree>
          <field name="vat_id"/>
          <field name="name" />
          <field name="date"/>
          <field name="stamps"/>
          <field name="canceled"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="finkok_vats_action_window">
      <field name="name">Finkok Vats Action Window</field>
      <field name="res_model">finkokstamps.vats</field>
      <field name="view_id" ref="finkok_vats_list"/>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="finkok_stamps_action_window">
      <field name="name">Finkok Stamps Window</field>
      <field name="res_model">finkokstamps.stamps</field>
      <field name="view_id" ref="finkok_stamps_list"/>
      <field name="view_mode">tree,form</field>
    </record>

