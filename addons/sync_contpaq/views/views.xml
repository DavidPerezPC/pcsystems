<odoo>
  <!-- explicit list view definition -->
    <record model="ir.ui.view" id="account_tree_form">
      <field name="name">sync_contpaq_account</field>
      <field name="model">sync.contpaq.account</field>
      <field name="arch" type="xml">
        <tree string="Cuentas Contpaq" editable="top">
          <field name="code"/>
          <field name="name"/>
          <field name="account_id"/>
          <field name="partner_id" />
          <field name="analytic_account_id" />
          <field name="company_id" />
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="sync_contpaq_account_action_window">
      <field name="name">Relaci√≥n Cuentas Contpaq Odoo</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">sync.contpaq.account</field>
      <field name="view_id" ref="account_tree_form"/>
      <field name="view_mode">tree,form</field>
      <!--field name="search_view_id" ref="filters_seasons_tree"/-->
    </record>

