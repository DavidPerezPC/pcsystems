<odoo>
    <record id="view_base_synchro_account_tree" model="ir.ui.view">
        <field name="name">base.synchro.account.tree</field>
        <field name="model">base.synchro.account</field>
        <field name="arch" type="xml">
            <tree string="Synchronized Server" class="o_base_synchro_server">
                <field name="id_company"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_base_synchro_account_form" model="ir.ui.view">
        <field name="name">base.synchro.account.form</field>
        <field name="model">base.synchro.account</field>
        <field name="arch" type="xml">
            <form string="accounts to Sync" class="o_base_synchro_server">
                <sheet>
                    <group colspan="4" col="4">
                        <field name="id_company"/>
                        <field name="name"/>
                    </group>
                </sheet>
                <separator string="COA"/>
                <field name="account_ids">
                    <tree string="Accounts" editable="bottom">
                        <field name="name"/>
                        <field name="account_code"/>
                        <field name="code_alias" />
                        <field name="code_alias_new" />
                        <field name="user_type_id" />
                        <field name="reconcile" />
                        <field name="currency_id" />
                        <field name="external_id" />
                        <field name="account_id_13" />
                        <field name="account_id_16" />
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="action_base_synchro_account_tree" model="ir.actions.act_window">
        <field name="name">Accounts Relation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">base.synchro.account</field>
        <field name="binding_view_types">form</field>
    </record>

    <menuitem parent="base_synchro.next_id_62" 
              name="Accounts Relation"
              action="action_base_synchro_account_tree" 
              id="menu_action_base_synchro_account_tree"
    />

</odoo>
