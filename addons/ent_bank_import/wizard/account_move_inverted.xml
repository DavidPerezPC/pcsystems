<odoo>

  <record id="account_move_inverted_wizard_view" model="ir.ui.view">
        <field name="name">Invoice Creation Wizard</field>
        <field name="model">account.move.inverted.wizard</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Find Reverted Moves to Delete">
                <group col="4">

                    <field name="journal_id"/>
                    <field name="date_start"/>
                    <field name="date_end" />

                </group>
                <footer>
                    <button name="find_reverted_moves" string="Find"
                            type="object"
                            class="btn-primary"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="move_invertedmoves_wizard_tree" model="ir.ui.view">
        <field name="name">Reverted Moves</field>
        <field name="model">account.move.invertedmoves.wizard</field>
        <field name="arch" type="xml">
            <tree string="Reverted" create="false" delete="false" editable="bottom">
                <header>
                    <button name="action_delete_reverted_moves"
                            type="object"
                            string="Delete Selected"
                            class="oe_highlight"
                    />
                </header>
                <field name="reverted_move_id"/>
                <field name="date_reverted"/>
                <field name="origin_move_id"/>
                <field name="date_origin"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_invertedmoves_wizard_tree">
      <field name="name">Reverted Moves</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.move.invertedmoves.wizard</field>
      <field name="binding_view_types">list</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="move_invertedmoves_wizard_tree"/>
    </record>   

    <!--record id="action_account_move_wizard_view" model="ir.actions.act_window">
        <field name="name">Invoice Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move.wizard</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_move_wizard_view"/>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window" id="lots_list_action">
      <field name="name">Lots</field>
      <field name="res_model">account.analytic.account</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="aupa_lots_extended_view_list"/>
    </record-->     

    <record model="ir.actions.act_window" id="action_account_move_inverted_wizard">
      <field name="name">Reverted Moves</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">account.move.inverted.wizard</field>
      <field name="binding_view_types">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="account_move_inverted_wizard_view"/>
      <field name="target">new</field>
    </record>     
    
    <menuitem parent="account.menu_finance_entries_actions" 
          name="Delete Reverted" 
          id="menu_action_account_move_delete_reverted"
          action="action_account_move_inverted_wizard"
          sequence="100"/>

</odoo>
