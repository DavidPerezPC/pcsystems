<odoo>
  <data>
    <record  id="caprepa_hr_employee_form" model="ir.ui.view">
        <field name="name">caprepa.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='coach_id']" position="after">
              <field name="admission_date"/>
            </xpath>      
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='personal_information']/group[1]/group[3]" position="replace">
              <group string="Recruiting Information">
                <field name="recruiter_id" />
                <field name="source_id" />
              </group>
              <group string="Mobility Information">
                <field name="driver_license" />
                <field name="license_expires" />
              </group>
            </xpath>
            <xpath expr="//field[@name='pin']" position="replace" />
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="string">Collaborator ID</attribute>
            </xpath>
        </field>
    </record>
