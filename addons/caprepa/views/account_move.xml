<odoo>
    <record  id="caprepa_account_invoice_form_inherited" model="ir.ui.view">
        <field name="name">caprepa_account_invoice_form_inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
              <field name="expense_flow_id" readonly="1" attrs="{'invisible':[('move_type', 'not in', ('in_invoice', 'in_receipt', 'in_refund'))]}"/>
            </xpath>      
        </field>
    </record>
</odoo>