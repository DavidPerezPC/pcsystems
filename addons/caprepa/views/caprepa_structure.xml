<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="caprepa_structure_form_view" model="ir.ui.view">
        <field name="name">caprepa.structure.form</field>
        <field name="model">caprepa.structure</field>
        <field name="arch" type="xml">
            <form string="Caprepa Structure">
                <field name="company_id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <group>
                                <group>
                                    <field name="name"/>
                                </group>
                                <group>
                                    <field name="company_code"/>
                                    <field name="brand_code"/>
                                </group>
                            </group>
                            <!--field name="name"/-->
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_name"/>
                            <field name="is_brand"/>
                            <field name="is_root"/>
                            <field name="parent_id" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company" invisible="1"/>
                        </group>
                    </group>

                    <!--notebook>
                        <page string="Applicability" name="applicability"
                              attrs="{'invisible': [('parent_id', '!=', False)]}">
                            <field name="applicability_ids">
                                <tree editable="bottom">
                                    <field name="business_domain"/>
                                    <field name="applicability"/>
                                </tree>
                            </field>
                        </page>
                    </notebook-->
                </sheet>
            </form>
        </field>
    </record>

    <record id="caprepa_structure_tree_view" model="ir.ui.view">
        <field name="name">caprepa.structure.tree</field>
        <field name="model">caprepa.structure</field>
        <field name="arch" type="xml">
            <tree string="Caprepa Structure" multi_edit="1">
                <header>
                    <button name="action_assign_parent" string="Do Structure" type="object"/>
                    <button name="action_create_brands" string="Create Brands" type="object"/>
                </header>
                <field name="company_id"/>
                <field name="company_code"/>
                <field name="company_name"/>
                <field name="brand_code"/>
                <field name="name"/>
                <field name="branch_name"/>
                <field name="full_code"/>
                <field name="parent_id"/>
                <field name="is_brand"/>
                <field name="is_root"/>
            </tree>
        </field>
    </record>

    <!--        View action for branch views        -->
    <record id="action_caprepa_structure_form" model="ir.actions.act_window">
        <field name="name">Caprepa Structure</field>
        <field name="res_model">caprepa.structure</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree'}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('caprepa_structure_form_view')})]"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
              Click to add a structure element.
          </p>
        </field>
    </record>

<!--        Menu item       -->
    <menuitem action="action_caprepa_structure_form" 
        id="menu_action_caprepa_structure_form" 
        parent="base.menu_users"/>

</odoo>