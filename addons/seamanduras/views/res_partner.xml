<odoo>
  <data>
    <record  id="seamanduras_res_partner_inherit_form" model="ir.ui.view">
        <field name="name">seamanduras_res_partner_inherit_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='vat']" position="after">
                <field name='curp'  placeholder="eg. AAPR630321HDFLRC01"/>             
                <field name='ine'  placeholder="eg. 074711637582"/>
                <field name='nss'  placeholder="eg. 293882992020" />
                <field name='marital_state'/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='category_id']" position="after">
                <field name='birth_date' />
                <field name='age'/>
                <field name='sex' widget="radio" options="{'horizontal': true}"/>
                <field name='has_assignments' />
                <field name='assignment_amount' attrs="{'invisible': [('has_assignments', '=', False)]}"/>
            </xpath>                  
        </field>
    </record>
  </data>
</odoo>